@model InmobilariaReal.Models.ViewModels.ProductoVM
@{
    ViewData["Title"] = "Producto_Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.oProducto.IdProducto == 0)
{
    <h2 class="h2 text-center">Crear Producto</h2>
}else{
    <h2 class="h2 text-center">Modificar Producto</h2>
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Producto_Detalle" asp-controller="Catalogo" method="post">
            <input type="hidden" asp-for="oProducto.IdProducto"/>
            
            <div class="mb-2">
                <label class="form-label" asp-for="oProducto.Nombre">Nombre</label>
                <input class="form-control form-control-sm" asp-for="oProducto.Nombre" type="text"/>
            </div>

             <div class="mb-2">
                <label class="form-label" asp-for="oProducto.Precio">Precio</label>
                <input class="form-control form-control-sm" asp-for="oProducto.Precio" type="number"/>
            </div>

             <div class="mb-2">
                <label class="form-label" asp-for="oProducto.CantPieza">Cantidad Pieza</label>
                <input class="form-control form-control-sm" asp-for="oProducto.CantPieza" type="number"/>
            </div>

             <div class="mb-2">
                <label class="form-label" asp-for="oProducto.CantBano">Cantidad Baño</label>
                <input class="form-control form-control-sm" asp-for="oProducto.CantBano" type="number"/>
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="oProducto.oCategoria.Idcategoria">Categoria</label>
                <select class="form-select form-select-sm" asp-for="oProducto.Idcategoria" 
                asp-items="@Model.oListaCategoria">
                    <option selected disabled>-- SELECCIONAR --</option>
                    
                </select>
            </div>
            <div class="mb-2">
                @if (Model.oProducto.IdProducto == 0)
                {
                    <button class="btn btn-primary" type="submit">CREAR</button>
                }else{
                    <button class="btn btn-primary" type="submit">Actualizar</button>
                }

                <a class="btn btn-dark " asp-action="Index" asp-controller="Home"> Volver</a>
            </div>
        </form>
    </div>
</div>
