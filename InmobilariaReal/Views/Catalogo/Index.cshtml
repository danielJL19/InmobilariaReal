@model List<InmobilariaReal.Models.Producto>

<a class="btn btn-success mb-3" asp-action="Producto_Detalle" asp-controller="Catalogo" asp-route-IdProducto="0">Crear producto</a>
<div class="row gap-2">
        @foreach (var item in Model)
        {
            <div class="card col-md-3">
                <div class="card-body">
                    <h5 class="h5">@item.Nombre</h5>               
                </div>
                <ul class="list-group list-group-flush">
                        <li class="list-group-item">Nº baños: @item.CantBano</li>
                        <li class="list-group-item">Nº piezas: @item.CantPieza</li>
                </ul>
                <div class="card-body d-flex justify-content-evenly">
                    <a class="btn btn-primary" asp-action="Producto_Detalle" asp-controller="Catalogo" asp-route-IdProducto="@item.IdProducto">Modificar</a>
                    <a class="btn btn-danger" asp-action="Eliminar" asp-controller="Catalogo" asp-route-IdProducto="@item.IdProducto">Eliminar</a>
                </div>
                <div class="card-footer">
                    <p class="text-center"> @item.oCategoria.Nombre</p>
                </div>
            </div>    
        }
    
</div>
